// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrganizationType {
  INDIVIDUAL
  NON_PROFIT_ORGANIZATION
  TOWN_HALL
  BUISNESS
}

enum EstimateStatus {
  DRAFT
  TO_DO
  WAITING_FOR_VALIDATION
  VALIDATED
}

model user {
  id                    Int               @id @default(autoincrement())
  email                 String            @unique
  hashedPassword        String
  role                  String            @default("client")
  firstname             String?
  lastname              String?
  managerName           String?
  organizationType      OrganizationType?
  organizationName      String?
  phone                 String?
  siretNumber           String?
  address1              String?
  address2              String?
  zipCode               String?
  city                  String?
  emailVerificationCode String?           @unique
  inscriptionDate       DateTime?

  estimate estimate[]
}

model estimate {
  id                    Int            @id @default(autoincrement())
  status                EstimateStatus @default(TO_DO)
  signature             String?
  validationDate        DateTime?
  deadLine              DateTime?
  additionalInformation String         @db.LongText
  validationCode        String?
  createDate            DateTime?
  userId                Int?
  customer              user?          @relation(fields: [userId], references: [id])
  products              estimateLine[]
  attachedFiles         attachedFile[]
}

model estimateLine {
  estimateId          Int
  estimation          estimate @relation(fields: [estimateId], references: [id])
  productId           Int
  products            product  @relation(fields: [productId], references: [id])
  quantity            Int
  estimateDescription String   @db.LongText
  createDate          DateTime

  @@id([estimateId, productId])
}

model product {
  id          Int            @id @default(autoincrement())
  name        String
  reference   String
  stock       Int
  description String         @db.LongText
  unitPrice   Decimal
  imageUrl    String
  estimates   estimateLine[]


}

model attachedFile {
  id         Int       @id @default(autoincrement())
  name       String?
  url        String?
  estimateId Int?
  estimate   estimate? @relation(fields: [estimateId], references: [id])
}
